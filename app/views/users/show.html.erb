<% provide(:title, @user.name) %>
<h1>
  <%= gravatar_for @user %>
  <%= @user.name %>
</h1>
<table>
	<tr>
		<th> age </th>
		<th> hometown </th>
	</tr>

	<tr>
		<td> <%= @user.age %> </th>
		<td> <%= @user.hometown %> </th>
	</tr>
</table>
<% if @user.microposts.any? %>
	<h3>Microposts (<%= @user.microposts.count %>)</h3>
	<ol class="microposts">
		<%= render @microposts %>
	</ol>
	<%= will_paginate @microposts %>
<% end %>
